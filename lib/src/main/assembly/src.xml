<?xml version="1.0" encoding="UTF-8"?>
<assembly>
   <id>src</id>

   <formats>
      <format>tar.gz</format>
      <format>tar.bz2</format>
      <format>zip</format>
   </formats>

   <fileSets>
      <fileSet>
         <includes>
            <include>${project.basedir}/README*</include>
            <include>${project.basedir}/COPYING*</include>
            <include>${project.basedir}/AUTHORS*</include>
            <include>${project.basedir}/pom.xml</include>
            <include>${project.basedir}/dump</include>
         </includes>
         <useDefaultExcludes>true</useDefaultExcludes>
      </fileSet>
      <fileSet>
         <directory>${project.basedir}/src</directory>
         <useDefaultExcludes>true</useDefaultExcludes>
      </fileSet>
   </fileSets>
</assembly>
